{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "extends": ["../../biome.json"],
  "files": {
    "ignoreUnknown": true,
    "includes": ["./src/**/*", "!.next", "!/out", "!/build", "!/dist", "!/public"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useButtonType": "off"
      },
      "complexity": {
        "noExtraBooleanCast": "error",
        "noUselessCatch": "error",
        "noUselessTypeConstraint": "error"
      }
    },
    "domains": {
      "test": "recommended",
      "project": "recommended"
    }
  },
  "overrides": [
    {
      "linter": {
        "rules": {
          "correctness": {
            "noUndeclaredVariables": "warn"
          }
        }
      }
    }
  ]
}
